{
  "name": "vue-toastification",
  "version": "2.0.0-beta.5",
  "private": false,
  "description": "Toasts for Vue made easy!",
  "author": "Gustavo Maronato",
  "scripts": {
    "dev": "cd demo && yarn dev",
    "prebuild": "rimraf ./dist",
    "build": "rollup -c build/rollup.config.js",
    "build:demo": "cd demo && yarn build",
    "test:unit": "jest",
    "test": "yarn test:unit",
    "test:watch": "yarn test --watch",
    "lint": "yarn lint:no-fix --fix",
    "lint:no-fix": "eslint --ext .js,.vue,.ts",
    "install:demo": "cd demo && yarn",
    "prepublishOnly": "yarn lint:no-fix && yarn test && yarn build"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": {
    "./dist/cjs/index.js": "./dist/umd/index.js",
    "./dist/esm/index.js": "./dist/esm/index.js"
  },
  "unpkg": "dist/umd/index.min.js",
  "jsdelivr": "dist/umd/index.min.js",
  "typings": "dist/types/index.d.ts",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "style": "dist/index.css",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@rollup/plugin-babel": "^5.2.1",
    "@types/jest": "^24.9.1",
    "@types/lodash.merge": "^4.6.6",
    "@types/vue": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/test-utils": "^2.0.0-beta.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "core-js": "^3.6.5",
    "deepmerge": "^4.2.2",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.0.0-beta.3",
    "fibers": "^5.0.0",
    "husky": "^4.3.0",
    "jest": "^24.9.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^10.4.0",
    "lodash.merge": "^4.6.2",
    "prettier": "^2.1.2",
    "rollup": "^2.27.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^9.0.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "rollup-plugin-vue": "^6.0.0-beta.10",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "vue": "^3.0.0",
    "vue-jest": "^5.0.0-alpha.3",
    "vue-loader": "^16.0.0-beta.7"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "yarn lint:no-fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "bugs": {
    "url": "https://github.com/Maronato/vue-toastification/issues"
  },
  "homepage": "https://github.com/Maronato/vue-toastification#readme",
  "keywords": [
    "vue",
    "notification",
    "toast"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Maronato/vue-toastification.git"
  }
}
